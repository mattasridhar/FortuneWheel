{
  "name": "fortune_wheel",
  "version": "1.0.0",
  "description": "A Simple application created for fun purposes",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-osx": "electron-packager . FortuneWheel --electron-version 10.0.0 --overwrite --platform=darwin --arch=x64 --icon=./assets/images/logoIcon.icns --prune=true --out=./dist",
    "build-win": "electron-packager . FortuneWheel --electron-version 10.0.0 --platform=win32 --icon=./assets/images/logoIcon.ico --out=./dist --overwrite",
    "build-linux": "electron-packager . FortuneWheel --electron-version 10.0.0 --platform=linux --icon=./assets/images/logoIcon.png --out=./dist --overwrite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattasridhar/FortuneWheel.git"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Sridhar Matta",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mattasridhar/FortuneWheel/issues"
  },
  "homepage": "https://github.com/mattasridhar/FortuneWheel#readme",
  "dependencies": {
    "electron": "^10.0.0"
  },
  "devDependencies": {
    "electron-packager": "^15.1.0"
  }
}
